@model CreateUpdateTestiminieDetailCommand

<!-- Sweep Modal -->

<div class="modal-content modal-small">

    <div class="modal-body">
        <div class="inner-filter">
            <h3>Testiminie Item</h3>
            <br />

            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Global.NameAr</label>
                <div class="col-md-8">
                    <textarea type="text" id="TitleArDetail"></textarea>
                </div>
                <span id="TitleArDetailValidation" class="text-danger" style="display:none">@ErrorMessages.Required</span>

            </div>
            <br />

            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Global.NameEn</label>
                <div class="col-md-8">
                    <textarea type="text" id="TitleEnDetail"></textarea>
                </div>
                <span id="TitleEnDetailValidation" class="text-danger" style="display:none">@ErrorMessages.Required</span>

            </div>
            <br />
             <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">Upload Pic</label>
                <div class="col-md-8">
                    <input type="file" id="TestiminieImageDetail" />
                </div>
            </div>
            <br />


            <div class="text-end" style="margin-top: 10px;">
                <button id="btnSubmitTestiminieDetail" class="btn btn-success btn-sm"><i class="fa-solid fa-check"></i></button>
                <button id="closeTestiminieDetail" class="btn btn-dark btn-sm" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
        </div>

    </div>

</div>