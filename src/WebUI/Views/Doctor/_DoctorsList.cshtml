@model List<DoctorVM>

<table id="table_id" class=" table-pages table table-bordered" style="font-size:13px;">
    <thead>
        <tr>
            <th>Doctor Name english</th>
            <th>Speciaty Name </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td> @doctor.NameEn </td>
                <td> @doctor.DepartmentName </td>

                <td>
                    <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning btn-sm"><i class="fa-regular fa-pen-to-square"></i></a>
                    <button class="btn btn-dark btn-sm"><i class="fa-regular fa-eye"></i></button>
                    <form asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.Id"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-update="#doctor-list"
                      data-ajax-mode="replace" autocomplete="off">

                         <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>

                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>