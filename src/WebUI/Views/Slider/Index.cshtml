@model List<SliderVM>
@{
    Layout = "_Layout";
}

<div class="inner-page">
    <a asp-action="Create" class="btn-add-table" style="min-width: 130px; margin-bottom: 20px;"><i class="fa-solid fa-plus"></i> add New</a>

    <table id="table_id" class=" table-pages" style="font-size:13px;">
        <thead>

            <tr>
                <th style="max-width:75px ;">@Global.NameEn</th>
                <th style="max-width:75px ;">@Global.NameAr</th>
                <th style="max-width:50px ;"></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                foreach (var Slider in Model)
                {
                    var id = "Slider" + Slider.Id;
                    <tr id="@id">
                        <td>@Slider.TitleEn</td>
                        <td>@Slider.TitleAr</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@Slider.Id" class="btn btn-warning btn-sm"><i class="fa-regular fa-pen-to-square"></i></a>
                            <button class="btn btn-danger btn-sm" onclick="deleteDetail('Slider','Delete',@Slider.Id,'@id')"><i class="fas fa-times"></i></button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>

</div>
