@model List<SliderVM>

    <table id="table_id" class=" table-pages table table-bordered" style="font-size:13px;">
        <thead>
            <tr>
                <th>@Global.NameEn</th>
                <th>@Global.NameAr </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        @if (Model != null)
        {
            foreach (var Slider in Model)
            {
                <tr>
                    <td> @Slider.TitleEn </td>
                    <td> @Slider.TitleAr </td>

                    <td>
                        <a asp-controller="Slider" asp-action="Edit" asp-route-id="@Slider.Id" class="btn btn-warning btn-sm"><i class="fa-regular fa-pen-to-square"></i></a>
                        <button class="btn btn-dark btn-sm"><i class="fa-regular fa-eye"></i></button>
                        <form asp-controller="Slider" asp-action="Delete" asp-route-id="@Slider.Id"
                              data-ajax="true"
                              data-ajax-method="POST"
                              data-ajax-update="#Slider-list"
                              data-ajax-mode="replace" autocomplete="off">

                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>

                        </form>

                    </td>
                </tr>
            }
        }
        </tbody>
    </table>