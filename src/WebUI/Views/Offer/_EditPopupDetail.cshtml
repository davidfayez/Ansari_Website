@model CreateUpdateOfferDetailCommand


<form class="modal-content modal-small" asp-controller="Offer" asp-action="EditOfferDetail" data-ajax="true" data-ajax-method="POST"
     data-ajax-update="#editOfferModal" data-ajax-mode="replace" autocomplete="off">

    <div class="modal-body">
        <div class="inner-filter">
            <h3>Offer Item</h3>
            <br />
            <input type="hidden" asp-for="OfferId" />
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Global.NameAr</label>
                <div class="col-md-8">
                    <input type="text" asp-for="TitleAr"></input>
                </div>
                <span asp-validation-for="TitleAr" class="text-danger"></span>

            </div>
            <br />

            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Global.NameEn</label>
                <div class="col-md-8">
                    <input type="text" asp-for="TitleEn"></input>
                </div>
                <span asp-validation-for="TitleEn" class="text-danger"></span>

            </div>
            <br />
            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Optic.Order</label>
                <div class="col-md-8">
                    <input type="number" asp-for="Order" />
                </div>
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <br />


            <div class="text-end" style="margin-top: 10px;">
                <button class="btn btn-success btn-sm"><i class="fa-solid fa-check"></i></button>
                <button id="closeOfferDetail" class="btn btn-dark btn-sm" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
        </div>

    </div>

</form>

@if (ViewBag.IsSuccess != null && (bool)ViewBag.IsSuccess == true)
{
    var id = (int)ViewBag.OfferId;
    
    <script asp-append-version="true">
        var data = { id: @id };
        $('#closeOfferDetail').click();
        common.renderPartialView('/Offer/GetAllOfferDetailByOfferId', data, 'offerDetails-list')
    </script>

}