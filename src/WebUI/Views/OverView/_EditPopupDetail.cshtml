@model CreateUpdateOverViewDetailCommand


<form class="modal-content modal-small" asp-controller="OverView" asp-action="EditOverViewDetail" data-ajax="true" data-ajax-method="POST"
     data-ajax-update="#editOverViewModal" data-ajax-mode="replace" autocomplete="off">

    <div class="modal-body">
        <div class="inner-filter">
            <h3>OverView Item</h3>
            <br />
            <input type="hidden" asp-for="OverViewId" />
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Global.NameAr</label>
                <div class="col-md-8">
                    <input type="text" asp-for="TitleAr"></input>
                </div>
                <span asp-validation-for="TitleAr" class="text-danger"></span>

            </div>
            <br />

            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Global.NameEn</label>
                <div class="col-md-8">
                    <input type="text" asp-for="TitleEn"></input>
                </div>
                <span asp-validation-for="TitleEn" class="text-danger"></span>

            </div>

            <br />

            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">@Optic.Value</label>
                <div class="col-md-8">
                    <input type="number" asp-for="Value"></input>
                </div>
                <span asp-validation-for="Value" class="text-danger"></span>

            </div>
            <br />


            <div class="text-end" style="margin-top: 10px;">
                <button class="btn btn-success btn-sm"><i class="fa-solid fa-check"></i></button>
                <button id="closeOverViewDetail" class="btn btn-dark btn-sm" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
        </div>

    </div>

</form>

@if (ViewBag.IsSuccess != null && (bool)ViewBag.IsSuccess == true)
{
    var id = (int)ViewBag.OverViewId;
    
    <script asp-append-version="true">
        var data = { id: @id };
        $('#closeOverViewDetail').click();
        common.renderPartialView('/OverView/GetAllOverViewDetailByOverViewId', data, 'OverViewDetails-list')
    </script>

}