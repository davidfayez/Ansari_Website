@{
    Layout = "_Layout";
}

<div class="inner-page">
    <div class="accordion">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button  accordion-setting" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class="fa-solid fa-maximize"></i>  Full screen
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse accordion-content collapse show" aria-labelledby="headingOne">
                <div class="accordion-body">

                    <div class="item-setting">
                        <h6>Full screen</h6>

                        <div class="switch-input">
                            <label>
                                <input type="checkbox" id="FullScreen" class="default__check switchbox">
                                <span class="custom__check"></span>

                            </label>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
                <button class="accordion-button  accordion-setting" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    <i class="fa-solid fa-earth-asia"></i> Language
                </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse accordion-content collapse show" aria-labelledby="headingTwo">
                <div class="accordion-body">
                    <div class="item-setting">
                        <h6>Arabic Language .</h6> <div class="switch-input">
                            <label>
                                <input type="checkbox" class="default__check switchbox">
                                <span class="custom__check"></span>

                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
                <button class="accordion-button  accordion-setting" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    <i class="fa-solid fa-paintbrush"></i>  Choose Theme & Full screen
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse accordion-content collapse show" aria-labelledby="headingThree">
                <div class="accordion-body">
                    <div class="item-setting">
                        <h6>Choose Theme</h6> <div class="switch-input"><button class="btn-logout" data-bs-toggle="modal" data-bs-target="#themeModal"><i class="fa-solid fa-paintbrush"></i> Choose</button></div>
                    </div>


                </div>

            </div>
        </div>


        <div class="accordion-item">
            <h2 class="accordion-header" id="headingFour">
                <button class="accordion-button  accordion-setting" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                    <i class="fa-solid fa-right-from-bracket"></i>  Log Out
                </button>
            </h2>
            <div id="collapseFour" class="accordion-collapse accordion-content collapse show" aria-labelledby="headingFour">
                <div class="accordion-body">
                    <div class="item-setting">
                        <h6>Log Out</h6> <div class="switch-input"><button class="btn-logout"><i class="fa-solid fa-right-from-bracket"></i> Log Out</button></div>
                    </div>


                </div>

            </div>
        </div>

    </div>
</div>
