@model List<QuestionVM>

<table id="table_id" class=" table-pages" style="font-size:13px;">
    <thead>

        <tr>
            <th>@Global.NameEn</th>
            <th>@Global.NameAr</th>
            <th style="max-width:50px ;">@Optic.Order</th>
            <th style="max-width:150px ;"></th>
        </tr>
    </thead>
    <tbody id="test">

        @foreach (var question in Model)
        {
            var id = "question" + question.Id;
            <tr id="@id">
                <td> @question.TitleEn</td>
                <td> @question.TitleAr</td>
                <td> @question.Order</td>
                <td>
                    <a asp-controller="Question" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-warning btn-sm"><i class="fa-regular fa-pen-to-square"></i></a>
                        <button class="btn btn-dark btn-sm"><i class="fa-regular fa-eye"></i></button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="deleteDetail('Question','Delete',@question.Id,'@id')"><i class="fas fa-times"></i></button>

                </td>
            </tr>
        }
        

    </tbody>
</table>