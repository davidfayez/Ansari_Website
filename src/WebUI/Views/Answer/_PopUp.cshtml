@model CreateUpdateAnswerCommand
<!-- answer Modal -->

<form class="modal-content modal-small"
      asp-controller="Answer" asp-action="Create"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-update="#_AnswerContainer"
      data-ajax-mode="replace"
      autocomplete="off" id="answerForm">

      <input type="hidden" asp-for="Id" />
    <div class="modal-body">
        <div class="inner-filter">
            <h3>Answer </h3>
            <br />
            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;"> @Global.NameAr</label>
                <div class="col-md-8">
                    <input type="text" asp-for="NameAr" />
                    <span id="NameArValidation" class="text-danger" style="display:none">@ErrorMessages.RequiredMessage.StringFormat(Global.NameAr)</span>

                </div>
            </div>
            <br />
            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;"> @Global.NameEn</label>
                <div class="col-md-8">
                    <input type="text" asp-for="NameEn" />
                    <span id="NameEnValidation" class="text-danger" style="display:none">@ErrorMessages.RequiredMessage.StringFormat(Global.NameEn)</span>
                </div>
            </div>

            <br />
            <div class="row">
                <label class="col-md-4" style="margin-top: 5px; font-size: 14px;">Order</label>
                <div class="col-md-8">
                    <input type="number" asp-for="Order" />
                </div>
            </div>
            <br />

            <div class="text-end" style="margin-top: 10px;">
                <button id="btnSubmitAnswer" class="btn btn-success btn-sm"><i class="fa-solid fa-check"></i></button>
                <button id="closeAnswer" class="btn btn-dark btn-sm" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
        </div>

    </div>

</form>

<script asp-append-version="true" src="~/js/Pages/Answer/AddAnswer.js"></script>
