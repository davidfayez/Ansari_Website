@model List<PartnerVM>
@{
    Layout = "_Layout";
}
<!-- ----------service-------------- -->
<section class="service-sec">
  <div class="container">
        <h2 class="text-center">
            @Global.WhyYouChoose @Global.AnsariHospital !!

    </h2>
        <p class="p-service text-center">@Global.WhyYouChooseDescription </p>
  </div>

</section>

<!-- ----------department-------------- -->
<section class="Doctors-inner-sec">

<div class="container">
<ul class="ul-partner row">
    @if (Model != null)
    {
        foreach (var partner in Model)
        {
            <li class="col-md-3"><a asp-controller="Partner" asp-action="Details" asp-route-id="@partner.Id"><img src="~/images/Partners/@partner.ImageUrl" /></a></li>
        }
    }
</ul>

</div>
</section>


