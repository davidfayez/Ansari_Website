@model List<DepartmentVM>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6">
        <h2>@Global.WeOfferHealthcarePrograms </h2><br />
        <p>
            @Global.WeOfferHealthcareProgramsDescription
        </p>
        <br />
        <select class="select-oppp option-department">
            <option>Please Choose The department</option>
        </select>
    </div>
    <div class="col-md-6">
        <div class="text-center">
            <img src="~/images/ap-doctor.png" class="department-doctor" />
        </div>
    </div>

</div>

   </div>

<div class="department-div">
    <div class="department-div-inner">
        <div class="container">
            <div class="row">
                @if(Model != null)
                {
                    @foreach (var department in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <a asp-action="Details" asp-route-id="@department.Id" class="item-doctor hvr-hang">
                                <div class="img-doctor" style="background-image: url(/images/Neurosurgery.jpg);"></div>
                                <h4>@department.TitleEn</h4>
                                <p>
                                   @department.DescriptionEn
                                </p>
                            </a>
                        </div>
                    }
                }
                
            </div>
        </div>
    </div>

</div>


