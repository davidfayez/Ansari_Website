@model CreateUpdateAboutUsCommand
@{
    var IsArabic = (bool)ViewBag.IsArabic;
    Layout = "_Layout";
}
<section class="mission-sec">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-8">
                <ul class="row">
                    <li class="col-md-6">
                        <div class="item-about-inner">
                            <div class="img-item-about-inner"><i class="fa-solid fa-bullseye"></i></div>
                            <h4>@(IsArabic ? Model.MissionTitleAr : Model.MissionTitleEn)</h4>
                            <p>
                                @(IsArabic ? Model.MissionDescriptionAr : Model.MissionDescriptionEn)
                            </p>
                        </div>
                    </li>

                    <li class="col-md-6">
                        <div class="item-about-inner">
                            <div class="img-item-about-inner"><i class="fa-solid fa-city"></i></div>
                            <h4>@(IsArabic ? Model.VisionTitleAr : Model.VisionTitleEn)</h4>
                            <p>
                                @(IsArabic ? Model.VisionTitleAr : Model.VisionTitleEn)
                            </p>
                        </div>
                    </li>

                    <li class="col-12">
                        <div class="inner-div-depart">
                            <div class="img-inner-department" style="background-image: url(images/about.jpg);height: 370px;margin-bottom: 0px;">
                            </div>
                        </div>

                    </li>

                </ul>
            </div>

            <div class="col-lg-3 col-md-4">

                <div class="item-about-inner">
                    <div class="img-item-about-inner"><i class="fa-solid fa-chart-gantt"></i></div>
                    <h4>Our Values</h4>

                    <ul class="ul-about">

                        @foreach (var item in Model.OurValueVMs)
                        {
                             <li>
                                @(IsArabic ? item.TitleAr : item.TitleEn)

                             </li>
                        }

                    </ul>

                </div>
            </div>
        </div>
    </div>

</section>

