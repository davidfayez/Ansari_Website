@model LoginViaEmailCommand

@{
    Layout = "_LayoutLogin";
}

<div class="Login-container">
    <div class="row">
        <div class="col-lg-5">
            <form asp-action="Login" class="reg-div">

                <img src="~/images/logo.png" class="logo-login" />
                <div class="text-center">
                    <h3>@Global.Login</h3>
                </div>

                <label>@Global.Email</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-phone"></i>
                    <input type="text" asp-for="Email" placeholder="@Global.Email">
                </div>

                <label>@Optic.Password</label>
                <div class="input-wrapper ">
                    <i class="fa-solid fa-eye" id="show-pass"></i>
                    <input type="password" asp-for="Password" class="two-padding input-pass" placeholder=" password ">

                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-check forget-password">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                @Optic.RememberMe
                            </label>
                        </div>
                    </div>
                    <div class="col-6 text-end"><a class="forget-password" href="Forget-password.html">Forgot your password?</a></div>

                </div>

                <div class="text-center">
                    <button type="submit" class="login-btn">@Global.Login</button>
                </div>

                <p class="p-account">@Optic.DoNotHaveAccount <a asp-controller="Account" asp-action="Register"> @Optic.Register</a></p>

            </form>
        </div>
    </div>

    <img src="~/images/login.png" class="login-pic" />

</div>