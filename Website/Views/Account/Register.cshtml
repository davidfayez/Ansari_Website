@model CreateUpdateVisitorCommand

<div class="Login-container">
    <div class="row">
        <div class="col-lg-5">
            <form asp-controller="Account" asp-action="Register">
                <div class="reg-div">
                    <img src="~/images/logo.png" class="logo-login" />
                    <div class="text-center">

                        <h3>@Optic.Register</h3>
                    </div>

                    <label>@Optic.Name</label>
                    <div class="input-wrapper">
                        <i class="fa-solid fa-user"></i>
                        <input type="text" asp-for="FullName" placeholder="Name">
                    </div>

                    <label>@Optic.PhoneNumber</label>
                    <div class="input-wrapper">
                        <i class="fa-solid fa-phone"></i>
                        <input type="text" asp-for="PhoneNumber" placeholder="Phone Number">
                    </div>

                    <label> @Optic.Password</label>
                    <div class="input-wrapper ">
                        <i class="fa-solid fa-eye" id="show-pass"></i>
                        <input type="password" asp-for="Password" class="two-padding input-pass" placeholder="password">
                    </div>

                    <div class="form-check forget-password">
                        <input class="form-check-input" type="checkbox" value="" id="IAgree">
                        <label class="form-check-label" for="IAgree">
                            @Optic.AgreeTo <a href="#" class="terms-Conditions">@Optic.TermsAndConditions</a>
                        </label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="login-btn">@Optic.Register</button>
                    </div>
                    <p class="p-account">@Optic.AlreadyHaveAccount <a href="Login.html"> @Optic.Login</a></p>

                </div>
            </form>
            
        </div>
    </div>

    <img src="~/images/login.png" class="login-pic" />

</div>

