@model OfferVM
@{
    var offers = ViewBag.Offers as List<OfferVM>;
    Layout = "_Layout";
}


<div class="inner-div-depart">
    <div class="img-inner-department" style="background-image: url(~/images/Offers/@Model.ImageUrl);">
    </div>

    <h3>@Model.Title</h3>

    <p>
        @Model.Description
    </p>

    <ul class="ul-offer">

        @foreach (var detail in Model.OfferDetailVMs)
        {
            <li>@detail.Title</li>
        }

    </ul>

    <div class="row">
        <div class="offset-md-9 col-md-3">
            <div class="blog-inner-details">
                <p>Before: @Model.PriceBefore$</p>
                <h6>After: @Model.PriceAfter$</h6>

                <p>Until: @Model.CreationDate.ToShortDateString()</p>
            </div>
        </div>
    </div>

</div>

<div class="glider-contain">


    <ul class="glider Doctor-Slider blogs-ul">
        @if (offers != null)
        {
            @foreach (var offer in offers)
        {
            <li>
                <div class="padding-dep position-relative">
                    <div class="img-doc" style="background-image:url(~/images/doc1.png);"></div>
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@offer.Id">
                        <div class="position-relative">
                            <div class="img-blog" style="background-image:url(~/images/Offers/@offer.ImageUrl) ;"></div>
                            <div class="absolute-blogs container-fluid">
                                <div class="row">
                                    <div class="col-7"><i class="fa-solid fa-calendar-days"></i> @offer.CreationDate.ToShortDateString()</div>
                                    <div class="col-5 text-end"><i class="fa-solid fa-eye"></i> 555</div>

                                </div>
                            </div>
                        </div>


                        <h4>@offer.Title</h4>
                        <hr>
                        <p class="p-blogs">@offer.Description</p>
                    </a>


                </div>
            </li>
        }
       
        }
        
        
    </ul>
    <button aria-label="Previous" class="glider-prev Doctor-prev">«</button>
    <button aria-label="Next" class="glider-next Doctor-next">»</button>
    <div role="tablist" class="dots"></div>
</div>

